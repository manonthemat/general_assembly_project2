<div class="row">
	<div class="col-sm-4 col-sm-offset-4">
		<h2>Edit Your profile</h2>
<%= form_for @user, html:{ class:"form"} do |f|  %>
	<div class="form-group">
	<%= f.text_field :name,
	placeholder: "Name", size: '55',
class: 'form-control' %>
	 </div>
	<div class="form-group">
	<%= f.text_field :email, 
	placeholder: "Email", size: '55',
class: 'form-control' %>
	 </div>
	<div class="form-group">
	<%= f.password_field :password,
	placeholder: "password", size: '55',
class: 'form-control' %>
	 </div>
	<div class="form-group">
	<%= f.password_field :password_confirmation,
	placeholder: "password confirmation", size: '55',
class: 'form-control' %>
	 </div>
	<div class="form-group">
	<%= f.submit "Add User", class:"btn btn-large btn-primary" %>
	 </div>
	<% end %>

<%= link_to "Back to the list!", users_path %>
	</div>
</div>
