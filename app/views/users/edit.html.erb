<%= form_for @user do |f|  %>
	Name: <%= f.text_field :name,
	placeholder: "Name" %>
	<%= f.text_field :email, 
	placeholder: "Email" %>
	<%= f.password_field :password,
	placeholder: "password" %>
	<%= f.password_field :password_confirmation,
	placeholder: "password confirmation" %>
	<%= f.submit "Add User" %>
	<% end %>

<%= link_to "Back to the list!", users_path %>

